[Unit]
Description=Bluetooth simple authentication service
ConditionPathIsDirectory=/sys/class/bluetooth
Requires=bluetooth.target
After=bluetooth.service bluetooth-dbbackup.service
Before=bluealsa.service bluetooth-reconnect.service
BindsTo=bluetooth.service

[Service]
Type=exec
#ExecStartPre=/bin/sleep 3
ExecStartPre=/usr/bin/bluetooth-simpleagent-starter
ExecStart=/usr/bin/bluetooth-simpleagent
Restart=always

[Install]
WantedBy=bluetooth.target
