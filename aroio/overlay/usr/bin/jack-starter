#!/bin/sh

. /boot/userconfig.txt

[ -e /tmp/measurement ] && AUDIO_OUTPUT=$MEASUREMENT_OUTPUT

[[ "$SOUNDCARD" = "HiFiBerry Digi" || "$SOUNDCARD" = "Allo DigiOne" ]] && JACKOPTS="-S"

case "$AUDIO_OUTPUT" in
	jack)
		if [ "$JACK_INPUT" = "ON" ]
		then /bin/jackd -R -P 50 -d alsa $JACKOPTS -r $RATE -p $JACKBUFFER -n $JACKPERIOD
		else /bin/jackd -R -P 50 -d alsa $JACKOPTS -P -r $RATE -p $JACKBUFFER -n $JACKPERIOD
		fi
	;;

	jack-ms)
		if [ "$JACKMS_INPUT" = "ON" ]
		then /bin/jackd -R -P 50 -d alsa $JACKOPTS -r $RATE -p $JACKBUFFER -n $JACKPERIOD
		else /bin/jackd -R -P 50 -d alsa $JACKOPTS -P -r $RATE -p $JACKBUFFER -n $JACKPERIOD
		fi
	;;

	jack-bf)
		if [ "$JACKBF_INPUT" = "ON" ]
		then /bin/jackd -R -P 50 -d alsa $JACKOPTS -r $RATE -p $JACKBUFFER -n $JACKPERIOD
		else /bin/jackd -R -P 50 -d alsa $JACKOPTS -P -r $RATE -p $JACKBUFFER -n $JACKPERIOD
		fi
	;;

	jack-bfms)
		if [ "$JACKBFMS_INPUT" = "ON" ]
		then /bin/jackd -R -P 50 -d alsa $JACKOPTS -r $RATE -p $JACKBUFFER -n $JACKPERIOD
		else /bin/jackd -R -P 50 -d alsa $JACKOPTS -P -r $RATE -p $JACKBUFFER -n $JACKPERIOD
		fi
	;;
esac
