#!/bin/sh

. /boot/userconfig.txt

SERVER_RESAMPL="OFF"

MACADDRESS=$(cat /sys/class/net/eth0/address)

[ "$SERVER_RESAMPL" = "ON" ] && SERVER_RESAMPL=" -r "$RATE"-"$RATE""

# For the life of my I cannot figure out, why I cannot give '-s $SERVERNAME' on the cmdline!?!
if [ "$SERVERNAME" = "" ]
then	/bin/squeezelite \
			-Z "$SQUEEZE_MAXFREQUENCY" \
			-M "$PLATFORM"	\
			-m "$MACADDRESS" \
			-n "$PLAYERNAME" \
			-p 45 \
			-d all=info \
			-o "$AUDIO_OUTPUT"

#		-a 145:4::1 \
#		-b "$SQUEEZE_INTBUFFER":"$SQUEEZE_OUTBUFFER" \

else	/bin/squeezelite \
			-Z "$SQUEEZE_MAXFREQUENCY" \
			-s "$SERVERNAME" \
			-M "$PLATFORM" \
			-m "$MACADDRESS" \
			-n "$PLAYERNAME" \
			-p 45 \
			-d all=info \
			-o "$AUDIO_OUTPUT"
fi

#		-a 145:4::1 \
#		-b "$SQUEEZE_INTBUFFER":"$SQUEEZE_OUTBUFFER" \
