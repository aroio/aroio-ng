#!/bin/sh

. /boot/userconfig.txt

SDDIR='/boot/filter'
OLDSDDIR="/boot/brutefir"
RAMDIR='/run/filter'

mkdir -p "$SDDIR"
mkdir -p "$RAMDIR"
[ -e /boot/brutefir ] && mv /boot/brutefir /boot/filter
cp -r "$SDDIR"/* "$RAMDIR"

#[ "$LOAD_PREFILTER" = "ON" ] &&
echo "Unpacking Stock filters..." ; /bin/zcat /etc/brutefir/filter.tgz | tar -xf - -C /run
chown -Rh sftparoio:users /run/filter
